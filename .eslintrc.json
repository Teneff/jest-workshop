{
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "extends": ["airbnb-base"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "rules": {
    "no-restricted-syntax": "off",
    "guard-for-in": "off",
    "no-param-reassign": "off",
    "import/no-unresolved": "warn"
  },
  "overrides": [
    {
      "files": ["**/*.js"],
      "rules": {
        "prefer-arrow-callback": "off",
        "func-names": "off"
      }
    },
    {
      "files": ["**/*.spec.js", "**/__mocks__/**"],
      "env": {
        "jest": true
      }
    },
    {
      "files": ["**/__mocks__/*.js"],
      "env": {
        "jest": true
      }
    }
  ]
}
